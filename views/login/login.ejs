<%- include('../partials/header.ejs') %>
<div class="u-container">

    <h1>Login</h1>

    <form class="form-container" action="/login" method="POST">
        
        <div class="form-group u-margin-bottom-medium">
            <label for="name">name</label>
            <input required type="text" name="username" id="name" class="form-control__input" value="<%= user.name %>">
        </div>

        <div class="form-group u-margin-bottom-medium">
            <label for="password">Password</label>
            <input required type="password" name="password" id="password" class="form-control__input" value="<%= user.password %>">
        </div>

        <button type="submit" class="btn btn--blue btn--contact">Login</button>

    </form>
    
</div>

